<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/danger</item>
        <item name="colorSecondaryVariant">@color/info</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/semibold</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <!--        <item name="android:windowEnterTransition">@transition/explode</item>-->
        <!--        <item name="android:windowExitTransition">@transition/explode</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fs_sub</item>

    </style>

    <style name="Theme.SplashTheme" parent="Theme.MedicPlus">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/extrabold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Bms.Inputs" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/regular</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeErrorColor">@color/danger</item>
        <item name="editTextColor">@color/black</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/fs_sub</item>
    </style>

    <style name="App.Bms.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/danger</item>
        <item name="colorSecondaryVariant">@color/info</item>
        <item name="colorOnSecondary">@color/success</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.Bms.Button" parent="Theme.MedicPlus">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/danger</item>
        <item name="colorSecondaryVariant">@color/info</item>
        <item name="cornerRadius">8dp</item>
        <item name="colorOnSecondary">@color/success</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.Bms.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="cornerRadius">8dp</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/danger</item>
        <item name="colorSecondaryVariant">@color/info</item>
        <item name="colorOnSecondary">@color/success</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.Bms.BottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">

    </style>

    <style name="App.DrawerTheme" parent="Theme.MedicPlus">
        <item name="colorControlHighlight">@color/primaryDark</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

</resources>