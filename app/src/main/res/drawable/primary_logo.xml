<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="100dp" />
            <solid android:color="@color/primary" />
            <corners android:radius="@dimen/padding_md" />
            <padding
                android:bottom="@dimen/padding_lg"
                android:left="@dimen/padding_lg"
                android:right="@dimen/padding_lg"
                android:top="@dimen/padding_lg" />
        </shape>
    </item>

</layer-list>